{
  "root": true,
  "extends": [
    "next",
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": ["jest"],
  "overrides": [
    {
      "files": ["**/__tests__/**/*.ts?(x)", "**/?(*.)+(spec|test).ts?(x)"],
      "env": { "jest/globals": true },
      "extends": ["plugin:jest/recommended"]
    },
    {
      "files": ["services/**/*.ts"],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "security/detect-object-injection": "off"
  }
}
