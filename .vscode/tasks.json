{
  "version": "2.0.0",
  "presentation": {
    "echo": false,
    "reveal": "always",
    "focus": false,
    "panel": "dedicated",
    "showReuseMessage": true
  },
  "tasks": [
    {
      "label": "Create terminals",
      "dependsOn": [
        "Supabase",
        "zsh",
        "Frontend"
      ],
      // Mark as the default build task so cmd/ctrl+shift+b will create them
      "group": {
        "kind": "build",
        "isDefault": true
      },
      // Try start the task on folder open
      "runOptions": {
        "runOn": "folderOpen"
      },
      "icon": {
        "id": "paintcan",
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "zsh",
      "type": "process",
      "command": ["zsh"],
      "isBackground": true,
      "presentation": {
        "group": "main",
        "focus": true,
        "panel": "dedicated"
      },
      "icon": {
        "id": "terminal",
        "color": "terminal.ansiWhite"
      }
    },
    {
      "label": "Supabase",
      "type": "shell",
      "command": ["source ./supabase/.env && supabase status"],
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "group": "main"
      },
      "icon": {
        "id": "database",
        "color": "terminal.ansiGreen"
      }
    },
    {
      "label": "Frontend",
      "type": "process",
      "command": ["zsh"],
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "panel": "dedicated",
        "group": "dev-group"
      }
    },
    {
      "label": "ngrok github events",
      "type": "shell",
      "command": ["ngrok http 8080 --subdomain reviewcorral"],
      "isBackground": true,
      "icon": {
        "id": "globe",
        "color": "terminal.ansiRed"
      }
    },
    {
      "label": "ngrok github auth",
      "type": "shell",
      "command": ["ngrok http 54321 --subdomain reviewcorralauth"],
      "isBackground": true,
      "icon": {
        "id": "globe",
        "color": "terminal.ansiRed"
      }
    },
  ]
}
