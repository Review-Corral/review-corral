{
  "name": "review-corral",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "sst dev",
    "build": "sst build",
    "build:core": "tsc -p ./packages/core/tsconfig.json",
    "build:core:watch": "p build:core --watch",
    "deploy": "sst deploy",
    "remove": "sst remove",
    "console": "sst console",
    "typecheck": "tsc --noEmit",
    "migrate": "sh ./services/scripts/nvmViteNode.sh ./services/scripts/migrate.ts",
    "migrate:gen": "pnpm drizzle-kit generate:pg --out ./services/core/db/migrations/ --schema ./services/core/db/schema/*"
  },
  "devDependencies": {
    "sst": "^2.38.7",
    "aws-cdk-lib": "2.110.1",
    "constructs": "10.3.0",
    "typescript": "^5.3.3",
    "@tsconfig/node18": "^18.2.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.11.0"
}
